    <title>Agregar Pedido</title>
</head>
<body class="bodybg">

{{> header title="Pedido"}}

  <div class="containerAgregarPedido"> <!--Contenedor Padre-->


    <form class="formularioInt">
      <!--Contenedor Hijo (AQUÍ ESTÁ NETAMENTE EL FORMULARIO)-->

             <a href="/pedidos"><img src="../img/return.ico" class="img-return"></a> 
              <h1 class="textoh1">Registrar Pedido</h1>
               
               <div class="row"> 
                
             <div class="col-md-6">
                

                <div class="mb-3 form-group">
                    <label for="numPedido" class="form-label textoh2">Info Cliente</label>
                  </div>

                     <div class="col-md-12 mt-5 mb-5 form-group">
                       <label for="nomCliente" class="form-label fontTtitle">Nombre Cliente <span class="text-danger">*</span></label>
                       <input type="text" class="form-control btnInput" name="nomCliente" id="nomCliente" oninput="validarNombre()">
                       <div id="mensajeError"></div>
                     </div>

                     <div class="mb-5 form-group">
                        <label for="email" class="form-label fontTtitle">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control btnInput" name="email" id="email"  oninput="validarCorreo()">
                        <div id="mensajeErrorCorreo"></div>
                      </div>

                      <div class="mb-5 form-group">
                        <label for="celular" class="form-label fontTtitle">Celular <span class="text-danger">*</span></label>
                        <input type="text" class="form-control btnInput" name="celular" id="celular"  oninput="validarCelular()">
                        <div id="mensajeErrorCelular"></div>
                      </div>

                      <div class="mb-5 form-group">
                        <label for="direccionResid" class="form-label fontTtitle">Dirección residencia<span class="text-danger">*</span></label>
                        <input type="text" class="form-control btnInput" name="direccionResid" id="direccionResid" oninput="validarDireccionResid()">
                        <div id="mensajeErrorDireccionResid"></div>
                      </div>

                      <div class="mb-5 form-group">
                        <label for="apto" class="form-label fontTtitle">Casa/Apto/Oficina <span class="text-danger">*</span></label>
                        <input type="text" class="form-control btnInput" name="apto" id="apto"  oninput="validarApto()">
                         <div id="mensajeErrorApto"></div>
                      </div>

                      
        <div class="">
          <a href="/agregarPedido.html"><button type="button" class="btn btn-light more">Cancelar</button> </a> 
       </div>

       <div class="">
        <a href="/agregarPedido.html"><button type="submit" class="btn btn-light more2" id="btnGuardar">Guardar</button> </a> 
     </div>

       
                     
             </div> 
                 
             <div class="col-md-6">

                  <div class="row2">

                       
                <div class="mb-6 form-group">
                  <label for="numPedido" class="form-label textoh3">Info Pedido</label>
                </div>

                        <div class="row-cols-2 row3">

                        <div class="p-1 mb-6 form-group">
                            <label for="numPedido" class="form-label fontTtitle">Núm Pedido <span class="text-danger">*</span></label>
                            <input type="text" class="form-control btnInput2" name="numPedido" id="numPedido"  oninput="validarNumPedido()">
                            <div id="mensajeErrorNumPedido"></div>
                         </div>

                         <div class="p-1 mb-6  form-group">
                            <label for="nomInsumo" class="form-label fontTtitle">Total Pedido <span class="text-danger">*</span></label>
                            <input type="text" class="form-control btnInput2" name="nomInsumo" id="nomInsumo" oninput="validarTotalPedido()">
                            <div id="mensajeErrorTotalPedido"></div>
                         </div> 

                         <div class="p-1 mb-6 form-group">
                            <label for="Estado" class="form-label fontTtitle">Estado <span class="text-danger">*</span></label>
                            <select class="form-select selector" aria-label="Default select example" oninput="validarEstado()">
                              <option selected></option>
                              <option value="1">Pendiente</option>
                              <option value="2">Revisión</option>
                              <option value="3">Aprobado</option>
                              <option value="4">Rechazado</option>
                              <option value="5">Cancelado</option>
                            </select>
                          </div>

                          <div class="p-1 mb-6  form-group">
                            <label for="direccion" class="form-label fontTtitle">Dirección envío<span class="text-danger">*</span></label>
                            <input type="text" class="form-control btnInput2" name="direccion" id="direccion"  oninput="validarDireccion()">
                            <div id="mensajeErrorDireccion"></div>
                         </div> 

                         <div class="p-1 mb-6  form-group">
                            <label for="nomInsumo" class="form-label fontTtitle">Fecha Pedido <span class="text-danger">*</span></label>
                            <input type="date" class="form-control btnInput2" name="nomInsumo" id="nomInsumo" >
                         </div> 

                         <div class="p-1 mb-6  form-group">
                            <label for="nomInsumo" class="form-label fontTtitle">Fecha Entrega <span class="text-danger">*</span></label>
                            <input type="date" class="form-control btnInput2" name="nomInsumo" id="nomInsumo" >
                         </div> 

                    </div>

                        <!--Incio rowTransaccion-->
                    <div class="rowTransaccion gridAggPedido2">


                   <div class="p-2 mb-6  form-group">
                    <label for="nomInsumo" class="form-label fontTtitleAggPedido2">Forma Pago  <span class="text-danger">*</span></label>
                    <select class="form-select selectPagos" aria-label="Default select example" >
                      <option selected></option>
                      <option value="1">Bancolombia</option>
                      <option value="2">Nequi</option>
                      <option value="3">DaviPlata</option>
                      <option value="4">Bbva</option>
                      <option value="5">Pse</option>
                    </select>
                 </div> 

                 
                        <!-- Contenedor para la vista previa de la imagen -->
                      <div class="contenedorImg2" id="contenedorImg2">
                          <img id="imgComprobante" class="imgComprobante">

                      </div>

                      <!--Comprobante de pago-->
                      <div class="contenedorArchivo">
                        <form>
                            <div class="form-control">
                              <label for="customFile" class="form-label" >Seleccionar Imagen</label>
                                <input type="file" class="form-control visually-hidden" id="customFile" accept="image/*" onchange="mostrarImagenSeleccionada(this)" >
                              
                            </div>
                        </form>
                    
                        <button class="descargar-btn"  id="descargar-btn" onclick="descargarImagen()" disabled >Descargar Imagen</button>
                    
                    </div>

                      


                    </div>
                    
                    <!--Fin de rowTransaccion-->

                    
                    <div class="row4 gridAggPedido">

                      <img src="../img/more.ico" alt="Agregar Producto" class="imgAggProducto">

                      <div class="p-2 mb-6  form-group">
                        <label for="nomInsumo" class="form-label fontTtitleAggPedido">Producto</label>
                     </div> 

                     <div class="p-2 mb-6  form-group">
                      <label for="nomInsumo" class="form-label fontTtitleAggPedido">Cantidad <span class="text-danger">*</span></label>
                      <input type="text" class="form-control btnInput2" name="nomInsumo" id="nomInsumo"  >
                   </div> 

                   <div class="p-2 mb-6  form-group">
                    <label for="nomInsumo" class="form-label fontTtitleAggPedido">Talla <span class="text-danger">*</span></label>
                    <select class="form-select" aria-label="Default select example" >
                      <option selected></option>
                      <option value="1">S</option>
                      <option value="2">M</option>
                      <option value="3">L</option>
                      <option value="4">XL</option>
                      <option value="5">XXL</option>
                    </select>
                 </div> 

                      <div class="contenedorImg">
                          <img src="" alt="Img Producto" class="imgProducto">

                      </div>


                    </div>


                    <div class="row5">

                      <!--LISTADO DE PRODUCTOS-->
                      <div class="containerListarAgg">

                        <div class="container2"> <!--Contenedor tipo encabezado, para el titulo-->
            
            
                                <table class="table table-orientacion">
                                    <thead>
                                      <tr>
                                        <td scope="col" class="camposListar">Producto</td>
                                        <td scope="col" class="camposListar">Categoría</td>
                                        <td scope="col" class="camposListar">Cantidad</td>
