                                        <td class="datosListar">---</td>
                                        <td class="datosListar">---</td>
                                        <td class="datosListar">---</td>
                                        <td class="icons"> 
            
                                                <!--BOTONES SIN LA MODAL, ASÍ SE USARÁN NORMALMENTE--> 
                                                  <div> 
                                                <a href=""> <img src="../img/pencil.ico" alt="" class="iconos-listar img-delete"></a>
                                           </div>
            
                                            <div>  
                                                 <a href="/agregarPedido.html"> <img src="../img/show.ico" alt="" class="iconos-listar img-show"></a>
                                             </div>
            
                                             <div>  
                                                 <a href=""> <img src="../img/delete.ico" alt="" class="iconos-listar img-delete"></a>
                                             </div>
                                      </tr>
            
                                      <tr>
                                        <th scope="row" class="datosListar">---</th>
                                        <td class="datosListar">---</td>
                                        <td class="datosListar">---</td>
                                        <td class="datosListar">---</td>
                                        <td class="datosListar">---</td>
                                        <td class="icons"> 
            
                                            <div> 
                                                <a href=""> <img src="../img/pencil.ico" alt="" class="iconos-listar img-delete"></a>
                                           </div>
            
                                            <div>  
                                                 <a href="/agregarPedido.html"> <img src="../img/show.ico" alt="" class="iconos-listar img-show"></a>
                                             </div>
            
                                             <div>  
                                                 <a href=""> <img src="../img/delete.ico" alt="" class="iconos-listar img-delete"></a>
                                             </div>
                                        </td>
            
                                      </tr>
                                
                                    </tbody>
                                  </table>

                                  <nav aria-label="Page navigation example" class="pag">
                                    <ul class="pagination ">
                                      <li class="page-item disabled">
