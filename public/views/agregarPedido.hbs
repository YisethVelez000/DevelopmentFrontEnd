                                        <td scope="col" class="camposListar">Subtotal</td>
                                        <td scope="col" class="text-center camposListar">operaciones</td>
            
                                      </tr>
                                    </thead>
                                    <tbody>
                                      <tr>
                                        <th scope="row" class="datosListar">---</th>
