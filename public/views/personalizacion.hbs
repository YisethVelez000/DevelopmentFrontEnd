<body>
 <!--Navbar-->
 {{> header title="Productos"}}
 <!--Cierre navbar-->

<!--FORMULARIO-->



    <div class="container">
      
        <!-- Contenedor Padre -->
       
        <h1 class="textoh1">Personalizado</h1>
        <form class="formularioInt">
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-4 form-group">
                        <label for="proveedor" class="form-label fontTtitle">Producto base:</label>
                        <select class="form-select" aria-label="Default select example">
                            <option selected></option>
                            <option value="1">Buso</option>
                            <option value="2">Sudadera</option>
                            <option value="3">Camisa</option>
                            <option value="4">Camiseta</option>
                            <option value="5">TOP</option>
                        </select>
                    </div>
                </div>
               
                <div class="col-md-4">
                    <div class="mb-4 form-group">
                        <label for="proveedor" class="form-label fontTtitle">Tipo de estampado:</label>
                        <select class="form-select" aria-label="Default select example">
                            <option selected></option>
                            <option value="1">Sublimación</option>
                            <option value="2">Vinilo</option>
                            <option value="3">Tampografía</option>
                            <option value="4">Bordado</option>
                        </select>
                    </div>
                </div>

            <!-- Agregado un contenedor div para cada grupo de 3 columnas -->
            <div class="row">
                <div class="col-md-4">
                    <div class="mb-3 form-group">
                        <label for="numCompra" class="form-label fontTtitle">Nombre de su prenda:</label>
                        <input type="text" class="form-control btnInput" id="numCompra">
                    </div>
                </div>
              
            </div>
            <div class="row">
              <table border="1">
                <h1>Diseño de estampado</h1>
                <thead>
                    <tr>
                        <th>Imagen de lo que desea</th>
                        <th>Ubicación</th>
                        <th>Posición</th>
                        <th>Tamaño(cm)</th>
                    </tr>
                </thead>
                <tbody id="tablaCuerpo">
                    <!-- Las filas de la tabla se agregarán dinámicamente aquí -->
                </tbody>
                
            </table>
            <button type="button" onclick="agregarFila()">Agregar Imagen</button>
            </div>
            <div class="btnContainer">
                <div class="btnWrapper">
                <button type="submit" class="btn btnCancelar">Cancelar</button>
                <button type="button" class="btn btnGuardar" data-bs-toggle="modal" data-bs-target="#miModal">Agregar al carrito</button>
            </div>
        </div>
    
            <!-- Modal para vista (no funcional) -->
            <div class="modal" tabindex="-1" id="miModal">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Personalizado agregado correctamente al carrito de compras.</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <p>Tu producto personalizado se ha agregado correctamente al carrito.</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Aceptar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </form>
    </div>
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

 
  </div>
